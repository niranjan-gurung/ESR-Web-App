@inject SignInManager<IdentityUser> _signInManager;
@inject UserManager<IdentityUser> _userManager;
@{
    var itemCount = Context.Session.Get<List<ShoppingCartItem>>("Cart") ?? [];
}

<ul class="nav-icons">
    @if (_signInManager.IsSignedIn(User))
    {
        <li>
            <form method="post" asp-controller="Account" asp-action="Logout">
                <button type="submit">
                    <i class="fa-solid fa-right-from-bracket"></i>Logout
                </button>
            </form>
        </li>
        <li><a href="#login-popup" rel="modal:open"><i class="fa fa-user"></i></a></li>
        <div id="login-popup" class="modal">
            <h1>User Info</h1>
            <p>Current user: @User.Identity.Name</p>
        </div>
        <li>
            <div class="wrapper">
                <a asp-controller="ShoppingCart" asp-action="ViewCart">
                    <i class="fa fa-cart-shopping"></i>
                    @if (@itemCount.Count >= 1)
                    {
                        <span>@itemCount.Count</span>
                    }
                </a>
            </div>
        </li>
    }
    else
    {
        <li><a asp-controller="Account" asp-action="Login"><i class="fa-solid fa-right-to-bracket"></i>Login</a></li>
        <li><a asp-controller="ShoppingCart" asp-action="ViewCart"><i class="fa fa-cart-shopping"></i></a></li>
    }
</ul>