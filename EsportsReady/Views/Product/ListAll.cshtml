@model List<Product>

@{
    ViewData["Title"] = "Gaming PCs";
}

<head>
    <link rel="stylesheet" href="~/css/products.css" asp-append-version="true" />
</head>

<main>
    <div class="hero-img-container">
        <div class="hero-text">
            <h3>ESR PLAYER PCS</h3>
            <h1>Be The Best Player</h1>
            <p>Don't let your current PC hold you back</p>
        </div>
    </div>
</main>

<section>
    <header class="sub-header">
        <h1>Our PCs</h1>
    </header>
    <div class="section-container">
        @foreach(var i in Model)
        {
            <section class="product-cards">
                <a asp-controller="Product" asp-action="Details" asp-route-id="@i.Id">@i.Title</a>
                <img 
                    src="@Url.Content(@i.Image)" 
                    alt="image failed to load..."
                />
            </section>
        }
    </div>
</section>
